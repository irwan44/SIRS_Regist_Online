    <TextView
        android:id="@+id/txt_idReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_noktp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_kdklinik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/group_13"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:src="@drawable/medical_svgrepo_com"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:src="@drawable/psychotherapy_fill_svgrepo_com" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:translationX="-70dp"
                android:translationY="15dp"
                android:padding="40dp">

                <TextView
                    android:id="@+id/namaDokter"
                    android:layout_width="210dp"
                    android:layout_height="42dp"
                    android:fontFamily="@font/bariol_bold"
                    android:text="Dr, Musa Nur Rahman"
                    android:textColor="@color/white"
                    tools:ignore="MissingConstraints"/>

                <TextView
                    android:id="@+id/jenisPoli"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:fontFamily="@font/bariol_bold"
                    android:textColor="@color/white"
                    android:text="Spesialis Kandungan"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="123dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="#5AB4FF"
                app:cardCornerRadius="4dp"
                android:translationX="-143dp"
                android:translationY="16dp"
                app:cardElevation="0dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tglPeriksa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/bariol_bold"
                    android:gravity="center"
                    android:text="2022-01-10 12:30"
                    android:textColor="@color/white"
                    android:textStyle="bold">

                </TextView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>