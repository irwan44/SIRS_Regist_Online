<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".EditPasienLama">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:background="@drawable/bg_rectangle_gradient4"
                tools:layout_editor_absoluteX="0dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/pg_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bariol_bold"
                            android:gravity="center"
                            android:text="Profile Pasien"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:navigationIcon="@drawable/arrow_left_white">

                        </androidx.appcompat.widget.Toolbar>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/frame"
                android:layout_width="128dp"
                android:layout_height="138dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="30dp"
                android:translationY="-94dp"
                android:layout_marginEnd="140dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fotoPasien"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/profile22"
                        app:civ_border_color="@color/birufigma"
                        app:civ_border_width="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pg_toolbar"
                        tools:ignore="MissingConstraints" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="87dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        tools:ignore="MissingConstraints" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/cb_edit_foto"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="87dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/cover"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/birufigma"
                        tools:ignore="MissingConstraints" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/btn_openEditFoto"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="95dp"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/camera"
                        app:civ_border_color="@color/black"
                        tools:ignore="MissingConstraints" />

                </FrameLayout>
            </LinearLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:translationY="-80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frame"
                tools:layout_editor_absoluteX="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="NIK Pasien :"
                    android:fontFamily="@font/bariol_bold"
                    android:drawableLeft="@drawable/ic_baseline_circle_24"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="0dp"
                    android:layout_marginHorizontal="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/backgroundDarkGrey"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_card" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:hintEnabled="false"
                        app:hintTextColor="@color/birufigma"
                        app:startIconContentDescription="NIK Pasien">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_ktpPasien"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            android:background="@color/transparan"
                            android:focusable="false"
                            android:fontFamily="@font/bariol_bold"
                            app:boxBackgroundColor="@color/white"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="Nama Pasien :"
                    android:fontFamily="@font/bariol_bold"
                    android:drawableLeft="@drawable/ic_baseline_circle_24"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/backgroundDarkGrey"
                    android:layout_marginHorizontal="15dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_user" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:hintEnabled="false"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:hintTextColor="@color/birufigma"
                        app:startIconContentDescription="Nama Pasien">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_namapasien"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            android:background="@color/transparan"
                            android:fontFamily="@font/bariol_bold"
                            app:boxBackgroundColor="@color/white"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:drawableLeft="@drawable/ic_baseline_circle_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/bariol_bold"
                        android:text="Tanggal Lahir :" />
                    <TextView
                        android:layout_width="170dp"
                        android:text="Tempat Lahir:"
                        android:layout_gravity="right"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/bariol_bold"
                        android:drawableLeft="@drawable/ic_baseline_circle_24"
                        android:drawablePadding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="60dp"
                            app:cardBackgroundColor="@color/backgroundDarkGrey"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_location15" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="153dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                app:boxCornerRadiusBottomEnd="20dp"
                                app:hintTextColor="@color/birufigma"
                                app:startIconContentDescription="NIK Pasien">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_tmptLahir"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/transparan"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/bariol_bold"
                                    android:inputType="text"
                                    app:boxBackgroundColor="@color/white" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="60dp"
                            app:cardBackgroundColor="@color/backgroundDarkGrey"
                            android:layout_gravity="right"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/calendar" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/edt_tgllahir"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="153dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                app:boxCornerRadiusBottomEnd="20dp"
                                app:hintEnabled="false"
                                app:hintTextColor="@color/birufigma"
                                app:startIconContentDescription="NIK Pasien">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_tglLahir"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:focusable="false"
                                    android:background="@color/transparan"
                                    android:layout_marginLeft="15dp"
                                    android:layout_gravity="right"
                                    android:fontFamily="@font/bariol_bold"
                                    app:boxBackgroundColor="@color/white" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Jenis Klamin:"
                    android:fontFamily="@font/bariol_bold"
                    android:drawableLeft="@drawable/ic_baseline_circle_24"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content" />


                <!--            SPINNER GENDER-->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="0dp"
                    android:layout_marginHorizontal="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/backgroundDarkGrey"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/jenisk" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="300dp"
                        android:layout_height="55dp"
                        android:layout_gravity="right"
                        android:focusable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/act_gender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusable="false"
                            android:background="@color/backgroundDarkGrey"
                            android:fontFamily="@font/bariol_bold"
                            android:inputType="none"
                            tools:ignore="LabelFor" />

                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:drawableLeft="@drawable/ic_baseline_circle_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/bariol_bold"
                        android:text="Usia :" />
                    <TextView
                        android:layout_width="170dp"
                        android:text="Gol. Darah:"
                        android:layout_gravity="right"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/bariol_bold"
                        android:drawableLeft="@drawable/ic_baseline_circle_24"
                        android:drawablePadding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="60dp"
                            app:cardBackgroundColor="@color/backgroundDarkGrey"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/heart" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="153dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                app:boxCornerRadiusBottomEnd="20dp"
                                app:hintEnabled="false"
                                app:hintTextColor="@color/birufigma"
                                app:startIconContentDescription="NIK Pasien">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_goldarah"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/transparan"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:maxLength="4"
                                    android:fontFamily="@font/bariol_bold"
                                    android:inputType="text"
                                    app:boxBackgroundColor="@color/white" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="60dp"
                            app:cardBackgroundColor="@color/backgroundDarkGrey"
                            android:layout_gravity="right"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/add_user" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="153dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                app:boxCornerRadiusBottomEnd="20dp"
                                app:hintEnabled="false"
                                app:hintTextColor="@color/birufigma"
                                app:startIconContentDescription="NIK Pasien">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_usia"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/transparan"
                                    android:layout_marginLeft="15dp"
                                    android:layout_gravity="right"
                                    android:fontFamily="@font/bariol_bold"
                                    android:inputType="number"
                                    app:boxBackgroundColor="@color/white" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Alergi:"
                    android:fontFamily="@font/bariol_bold"
                    android:drawableLeft="@drawable/ic_baseline_circle_24"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="0dp"
                    android:layout_marginHorizontal="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/backgroundDarkGrey"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/plus" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:hintEnabled="false"
                        app:hintTextColor="@color/birufigma"
                        app:startIconContentDescription="NIK Pasien">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_alergi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            android:maxLines="20"
                            android:background="@color/transparan"
                            app:boxBackgroundColor="@color/white"
                            android:fontFamily="@font/bariol_bold"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="Alamat:"
                    android:fontFamily="@font/bariol_bold"
                    android:drawableLeft="@drawable/ic_baseline_circle_24"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="0dp"
                    android:layout_marginHorizontal="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/backgroundDarkGrey"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/discovery" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"

                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:hintEnabled="false"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:hintTextColor="@color/birufigma"
                        app:startIconContentDescription="NIK Pasien">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_alamat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            android:background="@color/transparan"
                            app:boxBackgroundColor="@color/white"
                            android:fontFamily="@font/bariol_bold"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fabEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16sp"
                    android:text="Save Profile"
                    android:outlineAmbientShadowColor="@color/birufigma"
                    android:outlineSpotShadowColor="@color/birufigma"
                    android:background="@drawable/ic_background_accent_rounded"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:theme="@style/FabExtendedMaterialTheme"
                    app:iconTint="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fabEditPrivy"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16sp"
                    android:text="Save &amp; Back to Regist Privy"
                    android:outlineAmbientShadowColor="@color/birufigma"
                    android:outlineSpotShadowColor="@color/birufigma"
                    android:background="@drawable/ic_background_accent_rounded"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
