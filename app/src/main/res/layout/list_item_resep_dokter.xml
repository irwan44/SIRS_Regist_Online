<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--   Data parsing  -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/birufigma"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nourut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bariol_bold"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="1."/>
                <TextView
                    android:id="@+id/nmobat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Cardio Aspirin"
                    android:textStyle="bold"
                    android:fontFamily="@font/bariol_bold"
                    android:textSize="20dp"/>
                <!--           <TextView-->
                <!--               android:layout_width="210dp"-->
                <!--               android:layout_height="wrap_content"-->
                <!--               android:text="500mg"-->
                <!--               android:layout_marginTop="@dimen/radius_button_10"-->
                <!--               android:textStyle="bold"-->
                <!--               android:gravity="right"-->
                <!--               android:textColor="#4BABE7"-->
                <!--               android:fontFamily="@font/bariol_bold"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/jenisobat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obat Tablet"
                    android:textStyle="bold"
                    android:textColor="#61B5EA"
                    android:layout_marginHorizontal="48dp"
                    android:fontFamily="@font/bariol_bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aturan Pakai :"
                        android:textStyle="bold"
                        android:textColor="#797979"
                        android:textSize="10dp"
                        android:fontFamily="@font/bariol_bold"/>
                    <TextView
                        android:id="@+id/aturanpakai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 x 1"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:fontFamily="@font/bariol_bold"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#797979"/>
                <LinearLayout
                    android:layout_width="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Keterangan :"
                        android:textColor="#797979"
                        android:textStyle="bold"
                        android:fontFamily="@font/bariol_bold"/>

                    <TextView
                        android:id="@+id/ketobat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bariol_bold"
                        android:text="Sesudah Makan"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#797979"/>
                <LinearLayout
                    android:layout_width="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah :"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColor="#797979"
                        android:fontFamily="@font/bariol_bold"/>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/jmlobat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:fontFamily="@font/bariol_bold"/>
                        <TextView
                            android:id="@+id/jnsobat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Buah"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:fontFamily="@font/bariol_bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catatan :"
                    android:fontFamily="@font/bariol_bold"/>

                <TextView
                    android:id="@+id/noteobat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="italic"
                    android:text="Diminum Sebelum Malam Hari"
                    android:fontFamily="@font/bariol_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_4"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>