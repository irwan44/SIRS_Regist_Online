            <!--                android:paddingEnd="40dp"-->
            <!--                android:text="Cancel"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textStyle="bold" />-->
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>

</LinearLayout>