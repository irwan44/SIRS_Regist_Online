<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="129dp"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="361dp"
        android:layout_height="90dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/backgroundDarkGrey"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationX="9dp"
            android:translationY="15dp">

            <TextView
                android:id="@+id/namaKlinik"
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/bariol_bold"
                android:text="Klinik Averin Ceria"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationX="12dp"
            android:translationY="41dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:src="@drawable/medical_svgrepo_com">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="43dp">

            <TextView
                android:id="@+id/namaDokter"
                android:layout_width="210dp"
                android:layout_height="42dp"
                android:fontFamily="@font/bariol_bold"
                android:text="Dr, Musa Nur Rahman"
                android:textSize="12dp"
                android:translationX="43dp"
                android:translationY="10dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationX="197dp"
            android:translationY="41dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:src="@drawable/psychotherapy_fill_svgrepo_com">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationX="230dp"
            android:translationY="43dp">

            <TextView
                android:id="@+id/jenisPoli"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:fontFamily="@font/bariol_bold"
                android:gravity="center"
                android:text="Spesialis Kandungan"
                android:textSize="12dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="153dp"
                android:layout_height="30dp"
                android:translationX="220dp"
                android:translationY="-3dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#5AB4FF"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/tglPeriksa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/bariol_bold"
                    android:gravity="center"
                    android:text="2022-01-10 12:30"
                    android:textColor="@color/white"
                    android:textStyle="bold">

                </TextView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>