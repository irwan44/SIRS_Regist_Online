<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--   Data parsing  -->
    <TextView
        android:id="@+id/txt_gender"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_goldarah"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_umur"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

<!--=================== End Code =======================-->
    <TextView
        android:id="@+id/txt_idReg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_kodeklinik"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_namaklinik"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_tgl_daftar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_wkt_daftar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/group_13"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:src="@drawable/medical_svgrepo_com"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:src="@drawable/psychotherapy_fill_svgrepo_com" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:translationX="-70dp"
                android:translationY="15dp"
                android:padding="40dp">

                <TextView
                    android:id="@+id/txt_namaDokter"
                    android:layout_width="210dp"
                    android:layout_height="42dp"
                    android:fontFamily="@font/bariol_bold"
                    android:text="Dr, Musa Nur Rahman"
                    android:textColor="@color/white"
                    tools:ignore="MissingConstraints"/>

                <TextView
                    android:id="@+id/txt_namabagian"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:fontFamily="@font/bariol_bold"
                    android:textColor="@color/white"
                    android:text="Spesialis Kandungan"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="155dp"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/transparan"
                app:cardCornerRadius="4dp"
                android:translationX="-165dp"
                android:translationY="16dp"
                app:cardElevation="0dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/reflex_3"/>

                <TextView
                    android:id="@+id/txt_tglPeriksa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/bariol_bold"
                    android:gravity="center"
                    android:text="2022-01-10 12:30"
                    android:textColor="@color/white"
                    android:textStyle="bold">

                </TextView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>