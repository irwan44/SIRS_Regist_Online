<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".RegistPasienLama">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/pg_toolbar"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bariol_bold"
                        android:gravity="center"
                        android:textSize="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    </TextView>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:navigationIcon="@drawable/arrow_left">

                    </androidx.appcompat.widget.Toolbar>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="19dp"
                        android:layout_marginTop="28dp"
                        android:text="Back to Login"
                        android:textColor="@color/birufigma"
                        android:fontFamily="@font/bariol_bold"
                        app:layout_constraintStart_toEndOf="@+id/toolbar"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:fontFamily="@font/bariol_bold"
                android:src="@drawable/logo_dmedis"
                android:text="Registrasi Akun"
                android:textSize="76px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pg_toolbar" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="32px"
                android:fontFamily="@font/bariol_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="180dp"
                android:layout_height="143dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/register2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_username2"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/nik_pasient"
                    android:fontFamily="@font/bariol_bold"
                    android:translationY="19dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <EditText
                        android:id="@+id/inputNIK"
                        android:layout_width="257dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:maxLength="16"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="NIK Pasien"
                        android:inputType="number">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_username3"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_txt_username"
                    android:fontFamily="@font/bariol_bold"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <EditText
                        android:id="@+id/inputNama"
                        android:layout_width="257dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="Nama Lengkap"
                        android:inputType="text">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txt_username1"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/email"
                    android:fontFamily="@font/bariol_bold"
                    android:translationY="-15dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <EditText
                        android:id="@+id/inputEmail"
                        android:layout_width="257dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="Alamat Email"
                        android:inputType="textEmailAddress">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:autofillHints="phone"
                    android:background="@drawable/nomer_telphone"
                    android:fontFamily="@font/bariol_bold"
                    android:translationY="-35dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputHP"
                        android:layout_width="257dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="No Telepon"
                        android:inputType="number">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_txt_username"
                    android:fontFamily="@font/bariol_bold"
                    android:translationY="-53dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <EditText
                        android:id="@+id/inputUsername"
                        android:layout_width="253dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="User Name"
                        android:inputType="textEmailAddress">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_txt_tgllahir"
                    android:fontFamily="@font/bariol_bold"
                    android:translationY="-53dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <EditText
                        android:id="@+id/inputTgllahir"
                        android:layout_width="257dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="Tgl Lahir"
                        android:inputType="none">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/alamat"
                    android:fontFamily="@font/bariol_bold"
                    android:translationY="-53dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <EditText
                        android:id="@+id/inputAlamat"
                        android:layout_width="257dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="Alamat"
                        android:inputType="text">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:focusable="false"
                    android:background="@drawable/jeniskelamin"
                    android:translationY="-53dp"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/act_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="58dp"
                        android:focusable="false"
                        android:background="@color/transparan"
                        android:fontFamily="@font/bariol_bold"
                        android:inputType="none"
                        tools:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/alergi"
                    android:fontFamily="@font/bariol_bold"
                    android:translationY="-53dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <EditText
                        android:id="@+id/inputAlergi"
                        android:layout_width="257dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="Alergi"
                        android:inputType="text">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/golongandarah"
                    android:fontFamily="@font/bariol_bold"
                    android:translationY="-53dp"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <EditText
                        android:id="@+id/inputGoldarah"
                        android:layout_width="257dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="Golongan Darah"
                        android:inputType="textEmailAddress">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_txt_password"
                    android:translationY="-51dp"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_username1"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/inputPassword"
                        android:layout_width="257dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="Password"
                        android:inputType="textPassword">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_txt_password"
                    android:translationY="-51dp"
                    app:hintTextColor="@color/birufigma"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_username1"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/inputConfirmPassword"
                        android:layout_width="258dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="45dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/bariol_bold"
                        android:hint="Confirm Password"
                        android:inputType="textPassword">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fabSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_blue"
                    android:focusable="true"
                    android:fontFamily="@font/bariol_bold"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:text="Daftar"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="37dp">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="46dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="92dp"
                        android:fontFamily="@font/bariol_bold"
                        android:text="Sudah Punya akun ?"
                        android:textSize="17dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.258"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

                    <TextView
                        android:id="@+id/registAkun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="47dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="92dp"
                        android:fontFamily="@font/bariol_bold"
                        android:text=" Login"
                        android:textColor="@color/birufigma"
                        android:textSize="17dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.72"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_login"
                        app:layout_constraintVertical_bias="0.0" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="37dp">

                </View>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="37dp">

                </View>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>