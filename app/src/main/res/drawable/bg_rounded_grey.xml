<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/backgroundDarkGrey"></solid>
        </shape>
    </item>
    <!-- White Top color -->
    <item
        android:top="2px"
        android:bottom="5px"
        android:right="2px"
        android:left="2px">

        <shape  android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>